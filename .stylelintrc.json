{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "ignoreFiles": [
    "**/*.tsx",
    "**/*.jsx",
    "**/*.ts",
    "**/*.js",
    "**/*.md",
    "**/*.svg",
    "/node_modules",
    "**/*.woff",
    "**/*.woff2",
    "**/*.png",
    "build/",
    ".github",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.yml",
    "**/.tf"
  ],
  "customSyntax": "postcss-scss",
  "rules": {
    "scss/at-import-partial-extension": null,
    "no-descending-specificity": null,
    "selector-class-pattern": [
      "^[A-Za-z]+([A-Z0-9][a-z0-9]*)*$|^[A-Za-z0-9]+(-[a-z0-9]+)*$",
      {
        "message": "Expected class selector to be in camelCase or kebab-case"
      }
    ]
  }
}
